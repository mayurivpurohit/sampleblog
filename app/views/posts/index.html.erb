<div class = "container">
  <div class = 'span12' style = "pad">
    <%= render :partial => "search" %>
  </div>
  <div class = 'span12'>
    <h1>Blog</h1>
  </div>
  <div class = 'span12'>
    <table class = 'table table-hover table-bordered'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Created By</th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
        <tbody>
          <tr>
          <td><%= post.title %></td>
          <td><%= post.user_id %></td>
          <td><%= link_to "Read", post, :class => 'btn btn-primary' %></td>
          <td><%= link_to "Update", edit_post_path(post), :class => 'btn btn-info' %></td>
          <td><%= link_to "Delete", post, :confirm => "Are you sure to delete", :method => :delete, :class => 'btn btn-danger' %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    <div>
    <p><%= link_to "Create Post", new_post_path, :class => 'btn btn-primary' %></p>
    <%= will_paginate @posts %>
</div>

