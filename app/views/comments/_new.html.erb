<h2>Post Comment:</h2>
<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <table class = 'table table-striped'>
    <tboby>
      <tr>
        <%= f.hidden_field :user_id , value: "#{current_user.id}"  %>
        <td><%= f.input :commenter, input_html: { value: "#{current_user.first_name}"} %></td>
      </tr>
      <tr>
        <td><%= f.input :comment, :s =>:text, input_html: { class: 'special' } %></td>
      </tr>
      <tr>
        <td><%= f.button :submit, :class => 'btn btn-info'%></td>
      </tr>
    </tbody>
  </table>
<% end %>
<%= link_to 'Edit Post', edit_post_path(@post), :class => 'btn btn-primary' %>&nbsp;|&nbsp;
