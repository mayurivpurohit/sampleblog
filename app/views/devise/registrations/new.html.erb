<div class = "container" style = "padding-left:20px; padding-top:20px;">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.text_field :first_name, :autofocus => true, :placeholder => "First Name" %></div>

  <div>
  <%= f.text_field:last_name, :autofocus => true, :placeholder => "Last Name" %></div>

  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "Password" %></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %></div>

  <div><%= f.submit "Sign up", :class => 'btn btn-info' %> &nbsp;|&nbsp; <%= render "devise/shared/links" %></div>
<% end %>


</div>
